{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="container mx-auto">
        <div class="mt-3 text-center mt-10 font-bold text-4xl mb-20">
            <h1>Mot de passe oublié</h1>
        </div>
        <div class="flex justify-center">
        <div class="w-2/5">
            {{ form_start(form) }}

            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-input'}}) }}

            {{ form_label(form.envoyer) }}
            {{ form_widget(form.envoyer, {'attr': {'class': 'form-input'}}) }}

            {{ form_end(form) }}
        </div>
        </div>
    </div>
{% endblock %}
