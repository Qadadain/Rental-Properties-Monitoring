<!-- This example requires Tailwind CSS v2.0+ -->
<nav class="bg-gray-800">
    <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
        <div class="relative flex items-center justify-between h-16">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
                    <!-- Mobile menu button-->

                    <button type="button" id="burger-button"
                            class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
                            aria-controls="mobile-menu" aria-expanded="false">
                        <span class="sr-only">Open main menu</span>
                        <!--
                          Icon when menu is closed.

                          Heroicon name: outline/menu

                          Menu open: "hidden", Menu closed: "block"
                        -->
                        <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                             stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M4 6h16M4 12h16M4 18h16"/>
                        </svg>
                        <!--
                          Icon when menu is open.

                          Heroicon name: outline/x

                          Menu open: "block", Menu closed: "hidden"
                        -->
                        <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                             stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                    </button>
                </div>
            {% endif %}
            <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start">
                <div class="flex-shrink-0 flex items-center">
                    <img class="block lg:hidden h-8 w-auto"
                         src="https://tailwindui.com/img/logos/workflow-mark-indigo-500.svg" alt="Workflow">
                    <img class="hidden lg:block h-8 w-auto"
                         src="https://tailwindui.com/img/logos/workflow-mark-indigo-500.svg"
                         alt="Workflow">
                    <p class="text-white font-medium ml-5">SCI MG LIETIN</p>
                </div>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <div class="hidden sm:block sm:ml-6">
                        <div class="flex space-x-4">
                            <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
                            <a href="/" class="bg-gray-900 text-white px-3 py-2 rounded-md text-sm font-medium"
                               aria-current="page">Acceuil</a>

                            <a href="{{ path('property_index') }}"
                               class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Biens</a>

                            <a href="{{ path('tenant_show') }}"
                               class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Locataires</a>

                            <div class="relative inline-block text-left">
                                <button type="button"
                                        class="inline-flex justify-center w-full rounded-md  hover:bg-gray-700 shadow-sm px-4 py-2 text-gray text-sm font-medium text-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-indigo-500"
                                        id="add-button" aria-expanded="true" aria-haspopup="true">
                                    Ajouter
                                    <svg class="-mr-1 ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg"
                                         viewBox="0 0 20 20"
                                         fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd"
                                              d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                                              clip-rule="evenodd"/>
                                    </svg>
                                </button>
                                <div id="add-content"
                                     class="hidden origin-top-right absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-10"
                                     role="menu" aria-orientation="vertical" aria-labelledby="add-content"
                                     tabindex="-1">
                                    <div role="none">
                                        <a href="{{ path('tenant_add') }}"
                                           class="text-gray-700 block px-4 py-2 text-sm hover:rounded-t-md hover:bg-slate-400"
                                           role="menuitem"
                                           tabindex="-1" id="menu-item-0">Locataire</a>
                                        <a href="{{ path('property_add') }}"
                                           class="text-gray-700 block px-4 py-2 text-sm hover:bg-slate-400"
                                           role="menuitem"
                                           tabindex="-1" id="menu-item-1">Bien</a>
                                        <a href="{{ path('rental_property_add') }}"
                                           class="text-gray-700 block px-4 py-2 text-sm hover:bg-slate-400"
                                           role="menuitem"
                                           tabindex="-1" id="menu-item-2">Location</a>
                                        <a href="{{ path('property_accounting_add') }}"
                                           class="text-gray-700 block px-4 py-2 text-sm hover:bg-slate-400"
                                           role="menuitem"
                                           tabindex="-1" id="menu-item-2">Ligne bien</a>
                                        <a href="{{ path('rental_property_accounting_add') }}"
                                           class="text-gray-700 block px-4 py-2 text-sm hover:bg-slate-400"
                                           role="menuitem"
                                           tabindex="-1" id="menu-item-2">Ligne location</a>
                                        <a href="{{ path('rent_receipt_add') }}"
                                           class="text-gray-700 block px-4 py-2 text-sm hover:rounded-b-md hover:bg-slate-400"
                                           role="menuitem"
                                           tabindex="-1" id="menu-item-2">Justificatif</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>

            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
                    <!-- Profile dropdown -->
                    <div class="ml-3 relative">
                        <div>
                            <button type="button"
                                    class="bg-gray-800 flex text-sm rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white"
                                    id="user-menu-button" aria-expanded="false" aria-haspopup="true">
                                <span class="sr-only">Open user menu</span>
                                <i style="color: aliceblue;" class="fas fa-2x fa-users-cog"></i>
                            </button>
                        </div>

                        <div id="user-menu-content"
                             class="hidden origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none"
                             role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1">
                            <!-- Active: "bg-gray-100", Not Active: "" -->
                            <a href="{{ path('admin') }}"
                               class="block px-4 py-2 text-sm text-gray-700 hover:rounded-t-md hover:bg-slate-400" role="menuitem"
                               tabindex="-1"
                               id="user-menu-item-1">Admin</a>
                            <a href="{{ path('app_logout') }}"
                               class="block px-4 py-2 text-sm text-gray-700 hover:rounded-b-md hover:bg-slate-400"
                               role="menuitem"
                               tabindex="-1" id="user-menu-item-2">Sign out</a>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Mobile menu, show/hide based on menu state. -->
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="hidden" id="burger-menu">
            <div class="px-2 pt-2 pb-3 space-y-1">
                <a href="/" class="bg-gray-900 text-white block px-3 py-2 rounded-md text-base font-medium"
                   aria-current="page">Dashboard</a>

                <a href="{{ path('property_index') }}"
                   class="text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Biens</a>

                <a href="{{ path('tenant_show') }}"
                   class="text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Locataires</a>
            </div>
        </div>
    {% endif %}
</nav>
