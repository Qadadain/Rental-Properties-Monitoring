{% extends 'base.html.twig' %}
{% block body %}
    <div class="mt-3 text-center mt-10 font-bold text-4xl">
        <h1>Les biens</h1>
    </div>
    <div class="container mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-2 lg:gap-6 m-10">
            {% for property in properties %}
                <a href="{{ path('property_show', {'slug': property.slug}) }}">
                    <div class="bg-white h-auto tracking-wide border border-black-800 mx-1 rounded-lg relative">
                        <div class="small-banner w-1 h-20 absolute rounded-tl-md bg-violet-500"></div>
                        <h5 class="text-2xl font-semibold pl-6 pt-6 pr-6 pb-2">
                            {{ property.name }}</h5>
                        <div class="px-6 py-3">
                            <p class="text-md font-regular text-gray-500">{{ property.address }}</p>

                            <p class="text-md font-regular text-gray-500">{{ property.city }}- {{ property.zipCode }}</p>
                            <p class="text-sm font-regular p-2 text-gray-500">Nombre de location :  {{ property.rentalProperty | length }}</p>

                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}
