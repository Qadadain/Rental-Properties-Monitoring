{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <h1>Location {{ rentalProperty.name }}</h1>
        <h2>{{ rentalProperty.rentalPropertyType }}</h2>

        <div class="row">
            <div class="offset-lg-3 col-lg-6 col-12">
                <div class="image-card image-card-topimage">
                    <div class="image-card-topimage_header">
                        <i class="fa fa-4x fa-building building-color"></i>
                    </div>
                    <div class="content-card">
                        <h2 class="h4 text-center">
                            Compta du bien
                        </h2>
                        {{ render_chart(rentalPropertyAccountingChart) }}
                    </div>
                    <div class="card-action-bar">
                        <div class="col-6 p-0">
                            <a href="{{ path('rental_property_accounting_show', {'slug':rentalProperty.slug}) }}" class="link">
                                <i class="fas fa-lg fa-list-ul"></i>
                            </a>
                        </div>
                        <div class="col-6 p-0">
                            <a href="" class="link">
                                <i class="fas fa-lg fa-plus-circle"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
